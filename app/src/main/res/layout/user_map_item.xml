<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/envoltorio_mapa"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="270dp"
        android:layout_height="120dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/bubble_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/map_bubble_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_icon"
                    android:paddingRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/bubble_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:maxEms="17"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/imageUser"
                    android:layout_toEndOf="@+id/imageUser" />

                <TextView
                    android:id="@+id/bubble_subdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="17"
                    android:text="Grupos en comÃºn"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:visibility="visible"
                    android:layout_below="@+id/bubble_description"
                    android:layout_alignLeft="@+id/bubble_description"
                    android:layout_alignStart="@+id/bubble_description"
                    android:layout_alignRight="@+id/bubble_description"
                    android:layout_alignEnd="@+id/bubble_description"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/bubble_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="17"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_below="@+id/bubble_title"
                    android:layout_alignLeft="@+id/bubble_title"
                    android:layout_alignStart="@+id/bubble_title"
                    android:layout_alignRight="@+id/bubble_title"
                    android:layout_alignEnd="@+id/bubble_title" />

            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>