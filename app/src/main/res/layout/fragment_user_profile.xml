<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/userProfile_scrollViewDiscografia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:id="@+id/userProfile_backgroundImage"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/userProfile_userName"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_alignBottom="@+id/userProfile_backgroundImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/userProfile_userPicture"
                android:src="@drawable/user_icon"
                android:layout_marginTop="33dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="100dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                android:layout_below="@+id/userProfile_backgroundImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view3"
                android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/userProfile_userInfo"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/userProfile_editarPerfil"
                android:layout_alignTop="@+id/userProfile_userPicture"
                android:layout_alignRight="@+id/userProfile_userPicture"
                android:layout_alignEnd="@+id/userProfile_userPicture"
                android:src="@drawable/ic_border_color_black_18dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

