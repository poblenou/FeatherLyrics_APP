<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context="tk.sbarjola.pa.featherlyricsapp.Identificacion.RegisterActivity"
    android:background="@color/principal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/principal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_TextPassword"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/register_TextEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/register_TextEmail"
            android:layout_alignStart="@+id/register_TextEmail"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_TextEmail"
            android:hint="Email"
            android:maxLines="1"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/register_ButtonRegister"
            android:layout_alignStart="@+id/register_ButtonRegister"
            android:layout_alignRight="@+id/register_nombreUser"
            android:layout_alignEnd="@+id/register_nombreUser"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/register_info"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/register_SobreMi"
            android:layout_alignLeft="@+id/register_SobreMi"
            android:layout_alignStart="@+id/register_SobreMi"
            android:layout_alignRight="@+id/register_SobreMi"
            android:layout_alignEnd="@+id/register_SobreMi"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:id="@+id/register_ButtonRegister"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/register_info"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Credenciales de tu cuenta"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView1"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Información personal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:textColor="#FFFFFF"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/register_TextPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_SobreMi"
            android:hint="Sobre mi"
            android:layout_below="@+id/register_edadUser"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/register_edadUser"
            android:hint="Edad"
            android:layout_below="@+id/register_nombreUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/register_SobreMi"
            android:layout_alignEnd="@+id/register_SobreMi"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_nombreUser"
            android:hint="Nombre"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/register_SobreMi"
            android:layout_alignEnd="@+id/register_SobreMi"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="La aplicación recogerá datos de tu localización para ofrecer musica basada en tus gustos y zona."
            android:gravity="center"
            android:id="@+id/textView10"
            android:layout_below="@+id/register_ButtonRegister"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:id="@+id/register_profilePic"
            android:src="@drawable/user_icon"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</ScrollView>


